generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id          String     @id @default(uuid()) // Stiring goes with uuid(), Ing goes with autoincrement()
  email       String     @unique
  password    String
  name        String
  legoShelf   LegoShelf? @relation(fields: [legoShelfId], references: [id])
  wishList    Wishlist?  @relation(fields: [wishlistId], references: [id])
  legoShelfId Int?       @unique // Ensuring one-to-one relationship
  wishlistId  Int?       @unique // Ensuring one-to-one relationship
}

model LegoSet {
  id        Int        @id
  imagePath String
  name      String
  year      Int
  parts     Int
  wishlist  Wishlist[]
}

model LegoShelf {
  id         Int   @id @default(autoincrement())
  userId     Int
  totalParts Int
  User       User?
}

model Wishlist {
  id        Int     @id @default(autoincrement())
  userId    Int // Reference to the user who owns the wishlist
  legoSetId Int // Reference to the Lego set in the wishlist
  legoSet   LegoSet @relation(fields: [legoSetId], references: [id]) // Relation to LegoSet
  User      User?
}
